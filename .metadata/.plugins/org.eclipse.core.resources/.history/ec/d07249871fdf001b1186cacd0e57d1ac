				ch2_values[i]=(uint16_t)((short int)ch2_values[i]-32768)*100+32768;
			}
	}
	for(i=0;i<=402;i++)
	{
			  ch1_values[i]=(uint16_t)(ch1_values[i]<<8|ch1_values[i]>>8);
			  ch2_values[i]=(uint16_t)(ch2_values[i]<<8|ch2_values[i]>>8);
	}

//	for(i=0;i<=3;i++)
