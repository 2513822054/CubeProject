//	count1ms=0;
	if(chuizhi_scale==1)
	{
		for(i=0;i<=402;i++)
			{
			ch1_values[i]=(uint16_t)((short int)ch1_values[i]-32768)*10+32768;
			ch2_values[i]=(uint16_t)((short int)ch2_values[i]-32768)*10+32768;
			}
	}
	if(chuizhi_scale==0)
